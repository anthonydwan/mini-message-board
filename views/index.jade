extends layout

block content
  header
    h1= title
    p Welcome to #{title}! Let us know what's on your mind!
  main
    button.new-message-button(onclick='window.location="/new"') What's on your mind?
    
    - for(var x = len - 1; x >=0; x--)
      div.messageDiv
        p.msg #{msg[x].text}
        <hr>
        div.messageDiv-info
          p #{msg[x].user}
          p #{msg[x].added}




