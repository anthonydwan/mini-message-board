extends layout

block content
  header
    h1= title
    p Welcome to #{title}! Let us know what's on your mind!
  main
    button.new-message-button(onclick='window.location="/new"') What's on your mind?
    each msg in messages
      div.messageDiv
        p.msg #{msg.text}
        <hr>
        div.messageDiv-info
          p #{msg.user}
          p #{msg.added}




